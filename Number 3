#include <iostream>
using namespace std;

int main()
{
	setlocale(0, "");
  
	union
	{
		float value;
		int b;
	};
  
	cin >> value;
	unsigned int a = sizeof(value) * 8;
	int mask = 1 << a - 1;
	
	for (int i = 0; i < a; i++)
	{
		if (i == 1)
		{
			cout << " - знак  ";
		}
		if (i % 9 == 0 && i < 10 && i > 2)
		{
			cout << " - экспонента  ";
		}
		if (b & mask)
		{
			cout << 1;
		}
		else
		{
			cout << 0;
		}
		b <<= 1;
	}
	cout << " - мантисса";
	return 0;
}
