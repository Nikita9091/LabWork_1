#include <iostream>

using namespace std;

int main()
{
	cout << "int " << sizeof(int) << endl << "short int " << sizeof(short int) << endl << "long int " << sizeof(long int) << endl << "float " << sizeof(float) << endl << "double " << sizeof(double) << endl << "long double " << sizeof(long double) << endl << "char " << sizeof(char) << endl << "bool " << sizeof(bool) << endl << endl;
	return 0;
	
	
	int value;
	cout << "Bведите целое число" << endl;
	cin >> value;
	unsigned int order = 32;
	unsigned int mask = 1 << order - 1;
	cout << value << "\n";
	for (int i = 1; i <= order; i++)
	{
		putchar(value & mask ? '1' : '0');
		value <<= 1;
		if (i % 8 == 0)
		{
			cout << " ";
		}
		if (i % order - 1 == 0)
		{
			cout << " ";
		}
	}
	
	
	
	union
	{
		float value;
		int b;
	};
	cout << "Bведите число типа float" << endl;  
	cin >> value;
	unsigned int a = sizeof(value) * 8;
	int mask = 1 << a - 1;
	
	for (int i = 0; i < a; i++)
	{
		if (i == 1)
		{
			cout << " - знак  ";
		}
		if (i % 9 == 0 && i < 10 && i > 2)
		{
			cout << " - экспонента  ";
		}
		if (b & mask)
		{
			cout << 1;
		}
		else
		{
			cout << 0;
		}
		b <<= 1;
	}
	cout << " - мантисса";
	
	
	union
	{
		double value;
		int m[2];
	};
	cout << "Bведите число типа double" << endl;
	cin >> value;
	int mask = 1 << (sizeof(int) * 8 - 1);
	for (int i = 0; i < sizeof(int) * 8; i++)
	{
		cout << ((m[1] & mask) ? 1 : 0);
		if (i == 0)
		{
			cout << " - знак  ";
		}

		if (i > 2 && i < 12 && i % 11 == 0)
		{
			cout << " - порядок  ";
		}

		m[1] <<= 1;
	}
	for (int i = 0; i < sizeof(int) * 8; i++)
	{
		cout << ((m[0] & mask) ? 1 : 0);
		m[0] <<= 1;
	}
	cout << " - мантисса" << "\n";
	return 0;
}
