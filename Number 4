#include <iostream>
using namespace std;

int main()
{
	setlocale(0, "");
	union
	{
		double value;
		int m[2];
	};
	cout << "Bведите число типа double" << endl;
	cin >> value;
	int mask = 1 << (sizeof(int) * 8 - 1);
	for (int i = 0; i < sizeof(int) * 8; i++)
	{
		cout << ((m[1] & mask) ? 1 : 0);
		if (i == 0)
		{
			cout << " - знак  ";
		}

		if (i > 2 && i < 12 && i % 11 == 0)
		{
			cout << " - порядок  ";
		}

		m[1] <<= 1;
	}
	for (int i = 0; i < sizeof(int) * 8; i++)
	{
		cout << ((m[0] & mask) ? 1 : 0);
		m[0] <<= 1;
	}
	cout << " - мантисса" << "\n";
	return 0;
}
